<div class="container bg-card">
  <h1> Your Experiences </h1>
    <table class="table table-striped">
  <thead>
    <tr>
      <th>Booking Date</th>
      <th>Experience Name</th>
      <th>User</th>
      <th>Status/th>
    </tr>
  </thead>
  <tbody>
  <% @bookings.each do |booking| %>
    <tr>
      <td><%= booking.date.to_fs(:long_ordinal)%></td>
      <td><%= booking.experience.title %></td>
      <td><%= booking.user.email %></td>
      <td><%= booking.status %></td>

    </tr>
    <%= link_to 'Accept', accept_booking_path(booking), method: :patch %></div>
    <%= link_to 'Decline', decline_booking_path(booking), method: :patch %>
  <% end %>

  </tbody>
  </table>
</div>
